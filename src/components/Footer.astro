---
import Image from "astro/components/Image.astro";
import Container from "./Container.astro";
import footerBg from "../assets/footer.jpeg";
import logo from "../assets/bps.png";
import { webLinks } from "../../utils/links";
---

<footer id="footer" class="relative shadow-inner min-[2000px]:h-[100vh]">
  <Image
    src={footerBg}
    alt="Gambar Background"
    class="object-cover object-center absolute w-full h-full opacity-20 -z-10 blur-sm brightness-90"
  />
  <div class="py-8 px-4">
    <Container>
      <div
        class="grid grid-cols-1 gap-4 justify-between items-start sm:grid-cols-2 lg:grid-cols-4"
      >
        <a href="/" class="flex gap-2 items-center">
          <Image src={logo} alt="Logo BPS" width={64} />
          <p class="text-xl font-bold text-bpsDarkBlue">SIMPONI</p>
        </a>
        <div class="flex flex-col gap-4">
          <p class="py-1 px-2 text-center text-white rounded-xl bg-bpsBlue">
            Halaman
          </p>
          {
            webLinks.map((link) => {
              return (
                <a
                  href={link.href}
                  class="text-bpsDarkBlue underline hover:text-bpsDarkBlue/80"
                >
                  {link.name}
                </a>
              );
            })
          }
        </div>
        <div class="flex flex-col gap-4">
          <p class="py-1 px-2 text-center text-white rounded-xl bg-bpsGreen">
            Jam Kerja
          </p>
          <div class="flex flex-col gap-2">
            <p class="text-bpsDarkBlue">
              <i class="mr-1 fa-solid fa-calendar-days"></i> Senin - Kamis
            </p>
            <p class="text-gray-600">07.30 - 16.00</p>
          </div>
          <div class="flex flex-col gap-2">
            <p class="text-bpsDarkBlue">
              <i class="mr-1 fa-solid fa-calendar-days"></i> Jumat
            </p>
            <p class="text-gray-600">07.30 - 16.30</p>
          </div>
        </div>
        <div class="flex flex-col gap-4">
          <p class="py-1 px-2 text-center text-white rounded-xl bg-bpsOrange">
            Kontak Kami
          </p>
          <div class="flex flex-col gap-2">
            <p class="text-bpsDarkBlue">
              <i class="mr-1 fa-solid fa-location-dot"></i> Alamat
            </p>
            <a
              href="https://maps.app.goo.gl/cXnkoqMNyGx1sRZG7"
              target="_blank"
              class="text-gray-600 underline hover:text-gray-600/80"
            >
              Jalan Ahmad Yani No.4 Telanaipura Jambi.
            </a>
          </div>
          <div class="flex flex-col gap-2">
            <p class="text-bpsDarkBlue">
              <i class="mr-1 fa-solid fa-envelope"></i> Email
            </p>
            <p class="text-gray-600">produksi1500@bps.go.id</p>
          </div>
          <div class="flex flex-col gap-2">
            <p class="text-bpsDarkBlue">
              <i class="mr-1 fa-solid fa-phone"></i> Telepon
            </p>
            <p class="text-gray-600">0741-60497</p>
          </div>
        </div>
      </div>
    </Container>
    <div class="text-bpsDarkBlue pt-8 text-center">
      <p>&copy; Berkolaborasi dengan Tim Mahasiswa Magang Sistem Informasi UNJA 2024</p> 
  </div>
  </div>
</footer>
